<Page x:Class="Eclo_Desktop.Pages.MansCollectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eclo_Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MansCollectionPage">

    <Border CornerRadius="5" Background="{DynamicResource PrimaryBackgroundColor}">

        <ScrollViewer Margin="5">

            <StackPanel>
                <Border Margin="15 10" >
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Men's collection"
                               HorizontalContentAlignment="Center"
                               FontSize="25" FontWeight="SemiBold"
                               Foreground="{DynamicResource SecundaryBackgroundColor}"></Label>
                    </StackPanel>

                </Border>
                
                <Border Height="1"
                        Width="750"
                        Background="{DynamicResource NewItemsBackgroundSomeGrey}">
                </Border>
                
                <WrapPanel x:Name="MainWp">
                    <Grid>
                        <StackPanel Orientation="Horizontal"
                                    >
                            <CheckBox Style="{DynamicResource SwitchButton}"
                                      Content="Categories"  
                                      Tag="{DynamicResource CategoriesIcon}"
                                      
                                      >
                                
                            </CheckBox>                            
                        </StackPanel>
                    </Grid>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Page>
