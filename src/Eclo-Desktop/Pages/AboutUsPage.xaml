<Page x:Class="Eclo_Desktop.Pages.AboutUsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eclo_Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutUsPage">

    <Grid>
        <ScrollViewer >
            <Border CornerRadius="5"
            Margin="20 0 20 0"
            Background="{DynamicResource PrimaryBackgroundColor}">
                <Border Margin="15 10" >
                    <StackPanel Orientation="Vertical">
                        <Label Content="Welcome to ECLO"                    
                               FontSize="25" FontWeight="SemiBold"
                               Foreground="{DynamicResource FourthIconColor}"></Label>
                        <Label Content="Eclo is a budget-friendly clothing store that has colorful and trendy pieces for men , women and kids."                    
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextTertiaryColor}"></Label>
                    </StackPanel>
                </Border>


            </Border>
        </ScrollViewer>
    </Grid>
</Page>
