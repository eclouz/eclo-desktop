<Window x:Class="Eclo_Desktop.Windows.QuickView1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eclo_Desktop.Windows"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
     Title="MainWindow" Height="650" Width="850"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True"
        ResizeMode="NoResize" FontFamily="Poppins">

    <Grid>
        <Border Background="{DynamicResource PrimaryBackgroundColor}"
                CornerRadius="15"
                >
            <Grid Grid.Column="2" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <!-- Start: Button Close | Restore | Minimize -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft" Grid.RowSpan="2">
                    <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                    <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
                </StackPanel>
                <!-- End: Button Close | Restore | Minimize -->
                <ScrollViewer Grid.Row="1">
                <Grid 
                      Margin="10 0"
                      Height="400"
                      VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Height="400"
                                Width="400"
                                VerticalAlignment="Top"
                                CornerRadius="15">
                            <Border.Background>
                                <ImageBrush ImageSource="/assets/staticimages/Krossovka.jpg"/>
                            </Border.Background>
                            <Grid>
                                <Border Width="35"
                                        Height="35"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right"
                                        Margin="10"
                                        x:Name="LikeBorder"
                                        Background="{DynamicResource PrimaryBackgroundColor}"
                                        CornerRadius="20">
                                    <Border Margin="5"  
                                        MouseDown="Border_MouseDown">
                                        <Border.Background>
                                            <ImageBrush x:Name="brLike" ImageSource="/assets/staticimages/love.png"
                                />
                                        </Border.Background>
                                    </Border>
                                    
                                </Border>
                                <Border Width="35"
                                        Height="35"
                                        
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Margin="10"
                                        x:Name="RightBorder"
                                        MouseDown="RightBorder_MouseDown"
                                        Background="{DynamicResource PrimaryBackgroundColor}"
                                        CornerRadius="20">
                                    <Border Margin="5"  
                                        
                                            >
                                        <Border.Background>
                                            <ImageBrush x:Name="brNext" ImageSource="/assets/staticimages/right.png"
                                />
                                        </Border.Background>
                                    </Border>

                                </Border>
                                <Border Width="35"
                                        Height="35"
                                        
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="10"
                                        x:Name="LeftBorder"
                                        MouseDown="LeftBorder_MouseDown"
                                        Background="{DynamicResource PrimaryBackgroundColor}"
                                        CornerRadius="20">
                                    <Border Margin="5"  
                                        
                                            >
                                        <Border.Background>
                                            <ImageBrush x:Name="brLeft" ImageSource="/assets/staticimages/left.png"
                                />
                                        </Border.Background>
                                    </Border>

                                </Border>
                            </Grid>
                        </Border>
                        <Grid Grid.Column="1" Margin="10 0"
                              >
                            <StackPanel>
                                <Label x:Name="lblProductName"
                                       Content="Nike Zoom X"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource FourthIconColor}">
                                    
                                </Label>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Border Height="35"
                            Width="65"
                            BorderThickness="2"
                            CornerRadius="8"
                            BorderBrush="{DynamicResource PriceBorderForeColor}"                            
                        >
                                        <Label HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               x:Name="lblPrice"
                               Content="$45.99"
                               Margin="1"
                               FontSize="16"
                               Padding="0"
                               Foreground="{DynamicResource PriceBorderForeColor}"                            ></Label>
                                    </Border>
                                    <Border Margin="15 5 15 5"
                                            Background="LightGray"
                                            Width="1">
                                        
                                    </Border>
                                    <Border 
                                            Width="15"
                                            Height="15"
                                        Margin="0 0 5 0"
                                            >
                                        <Path Data="M12,18 L7.91561963,20.1472858 C7.42677504,20.4042866 6.82214789,20.2163401 6.56514708,19.7274955 C6.46280801,19.5328351 6.42749334,19.309867 6.46467018,19.0931094 L7.24471742,14.545085 L3.94038429,11.3241562 C3.54490071,10.938655 3.5368084,10.3055417 3.92230962,9.91005817 C4.07581822,9.75257453 4.27696063,9.65008735 4.49459766,9.61846284 L9.06107374,8.95491503 L11.1032639,4.81698575 C11.3476862,4.32173209 11.9473121,4.11839309 12.4425657,4.36281539 C12.6397783,4.46014562 12.7994058,4.61977315 12.8967361,4.81698575 L14.9389263,8.95491503 L19.5054023,9.61846284 C20.0519472,9.69788046 20.4306287,10.2053233 20.351211,10.7518682 C20.3195865,10.9695052 20.2170993,11.1706476 20.0596157,11.3241562 L16.7552826,14.545085 L17.5353298,19.0931094 C17.6286908,19.6374458 17.263103,20.1544017 16.7187666,20.2477627 C16.5020089,20.2849396 16.2790408,20.2496249 16.0843804,20.1472858 L12,18 Z"
                                              Fill="DarkOrange"
                                              Stretch="Fill"></Path>
                                    </Border>
                                    <Label x:Name="lblRating"
                                           Foreground="{DynamicResource FourthIconColor}"
                                           Content="4.5"
                                           FontSize="16"
                                           VerticalAlignment="Center">
                                    </Label>
                                    <Label 
                                           Content="."
                                        FontWeight="Bold"
                                           FontSize="16"
                                           >
                                    </Label>
                                    <Label x:Name="lblReviewCount"
                                           Content="1213"
                                           VerticalAlignment="Center"
                                           FontSize="16"
Foreground="{DynamicResource FourthIconColor}"
                                           Padding="0"
                                           >
                                    </Label>
                                    <Label 
                                           Content="reviews"
                                           VerticalAlignment="Center"
                                           FontSize="16"
                                        Foreground="{DynamicResource FourthIconColor}"
                                           >
                                    </Label>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label FontSize="16"
                                           Content="Color :"
                                           Foreground="{DynamicResource FourthIconColor}"
                                           >
                                    </Label>
                                    <Label x:Name="lblColor"
                                           FontWeight="SemiBold"
                                           Content="White"
                                           Foreground="{DynamicResource FourthIconColor}"
                                           FontSize="16">
                                        
                                    </Label>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"                            
                            Height="40"                            
                            Width="200"
                            Margin="0 5"
                                            HorizontalAlignment="Left">
                                    <RadioButton  x:Name="rbPurple"
                                  Background="#a78bfa"
                                  Style="{DynamicResource ColorClothes}">
                                    </RadioButton>
                                    <RadioButton  x:Name="rbYellow"
                                  Background="#facc15"
                                  Style="{DynamicResource ColorClothes}">
                                    </RadioButton>
                                    <RadioButton  x:Name="rbOrange"
                                  Background="#fb923c"
                                  Style="{DynamicResource ColorClothes}">
                                    </RadioButton>
                                    <RadioButton  x:Name="rbGreen"
                                  Background="#4ade80"
                                  Style="{DynamicResource ColorClothes}">
                                    </RadioButton>
                                    <RadioButton  x:Name="rbRed"
                                  Background="Red"
                                  Style="{DynamicResource ColorClothes}">
                                    </RadioButton>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label FontSize="16"
                                           Content="Size :"
                                           Foreground="{DynamicResource FourthIconColor}"
                                           >
                                    </Label>
                                    <Label x:Name="lblSize"
                                           FontWeight="SemiBold"
                                           Content="S"
                                           Foreground="{DynamicResource FourthIconColor}"
                                           FontSize="16">

                                    </Label>
                                </StackPanel>
                                <ScrollViewer HorizontalScrollBarVisibility="Visible"
                                              VerticalScrollBarVisibility="Disabled">
                                <StackPanel Orientation="Horizontal" x:Name="SPSize">
                                        
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                            
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
