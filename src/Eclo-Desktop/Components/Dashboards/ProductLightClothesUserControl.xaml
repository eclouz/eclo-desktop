                                              Fill="DarkOrange"
                             
                                              Stretch="Fill"></Path>
                    </Border>
                    <Label x:Name="lblRating"
                                           Foreground="{DynamicResource FourthIconColor}"
                                           Content="4.5"
                                           FontSize="16"                                           
                                           VerticalAlignment="Center">
                    </Label>-->
                    
                    <!--<Label Content="Rating"
                           Foreground="{DynamicResource TextTertiaryColor}"
                           
                           >
                        
                    </Label>-->

                </StackPanel>
            </StackPanel>

        </Border>
        <Border Width="200"
                Height="200"
                VerticalAlignment="Top"
                Margin="0 10"
                x:Name="ImageBorder">
            <Border.Background>
                <!--ImageSource="/Assets/StaticImages/MenuBarPicture.png"-->
                <ImageBrush 
                            x:Name="imgProduct"
                            Stretch="Uniform"/>
            </Border.Background>
        </Border>
        <Border Width="35"
                Height="35"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="10"
                x:Name="LikeBorder"
                Background="{DynamicResource PrimaryBackgroundColor}"
                CornerRadius="20">
            <Border Margin="5"  
                    MouseDown="brLike_MouseDown">
                <Border.Background>
                    <ImageBrush x:Name="brLike" ImageSource="/assets/staticimages/love.png"
                                />
                </Border.Background>
            </Border>
        </Border>
    </Grid>
</UserControl>
