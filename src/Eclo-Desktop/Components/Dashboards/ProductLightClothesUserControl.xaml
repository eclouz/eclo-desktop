<UserControl x:Class="Eclo_Desktop.Components.Dashboards.ProductLightClothesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eclo_Desktop.Components.Dashboards"
             mc:Ignorable="d" 
             Width="250"
             Height="420"
             Margin="15">
    <Grid>

        <Border Background="Transparent"
                x:Name="MainBorder"
                >
            <StackPanel>
                <Border Width="250"                        
                        Height="260"    
                        x:Name="myBorder"
                        CornerRadius="15"
                        Background="{DynamicResource NetItemsBackgroundColor}"
                        >

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            
                        </Grid.ColumnDefinitions>

                        <!--<Button x:Name="btnAddToBag"
                                Click="btnAddToBag_Click"
                        Grid.Column="0"
                        Style="{DynamicResource NewItemsComponentsButton}"
                        Content="Add to cart"
                        >
                        </Button>-->
                        <Button x:Name="btnQuickView"
                                Click="btnQuickView_Click"
                        Grid.Column="1"
                                
                        Style="{DynamicResource NewItemsComponentsButton}"
                        Content="Quick view"  
                        >
                        </Button>
                    </Grid>

                </Border>
                <StackPanel Orientation="Horizontal"                            
                            Height="40"                            
                            Width="200"
                            Margin="0 5">
                    <RadioButton  x:Name="rbPurple"
                                  
                                  Background="#a78bfa"
                                  Style="{DynamicResource ColorClothes}">
                    </RadioButton>
                    <RadioButton  x:Name="rbYellow"
                                  Background="#facc15"
                                  Style="{DynamicResource ColorClothes}">
                    </RadioButton>
                    <RadioButton  x:Name="rbOrange"
                                  Background="#fb923c"
                                  Style="{DynamicResource ColorClothes}">
                    </RadioButton>
                    <RadioButton  x:Name="rbGreen"
                                  Background="#4ade80"
                                  Style="{DynamicResource ColorClothes}">
                    </RadioButton>
                    <RadioButton  x:Name="rbRed"
                                  Background="Red"
                                  Style="{DynamicResource ColorClothes}">
                    </RadioButton>
                </StackPanel>
                <Label Content="Polo T-Shirt" 
                       x:Name="lblClotheName"
                       Foreground="{DynamicResource FourthIconColor}"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Margin="15 0">
                </Label>
                <Label Content="Perfect White"
                       x:Name="lblClotheColorDescription"
                        Margin="15 0"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Foreground="{DynamicResource TextTertiaryColor}">
                </Label>
                <StackPanel Height="30"
                            Margin="20 0"
                            Orientation="Horizontal"
                            >
                    <Border Height="25"
                            Width="55"
                            Margin="0 0 0 0"
                            BorderThickness="2"
                            CornerRadius="8"
                            BorderBrush="{DynamicResource PriceBorderForeColor}"                            
                        >
                        <Label HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               x:Name="lblPproductPrice"
                               Content="$99.98"
                               Margin="1"
                               FontSize="12"
                               Padding="0"
                               Foreground="{DynamicResource PriceBorderForeColor}"                            ></Label>
                    </Border>
                    
