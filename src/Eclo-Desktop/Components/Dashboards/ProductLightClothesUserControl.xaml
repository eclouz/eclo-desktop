                VerticalAlignment="Top"
                Margin="0 10"
                x:Name="ImageBorder">
            <fa:ImageAwesome
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="0"
                x:Name="loader"
                Icon="Spinner"
                Visibility="Visible"
                Spin="True"
                Height="100"
                Width="100"
                Foreground="#909CAB"
                />

            <Border.Background>
                <!--ImageSource="/Assets/StaticImages/MenuBarPicture.png"-->
                <ImageBrush 
                            x:Name="imgProduct"
                            Stretch="Uniform"/>
            </Border.Background>
        </Border>
        <Border Width="35"
                Height="35"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="10"
                x:Name="LikeBorder"
                Background="{DynamicResource PrimaryBackgroundColor}"
                CornerRadius="20">
            <Border Margin="5"  
                    MouseDown="brLike_MouseDown">
                <Border.Background>
                    <ImageBrush x:Name="brLike" ImageSource="/assets/staticimages/love.png"
                                />
                </Border.Background>
            </Border>
        </Border>
        <Button x:Name="btnQuickView"
                Margin="0 0 0 180"
