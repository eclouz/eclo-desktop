<UserControl x:Class="Eclo_Desktop.Components.Products.SmallProductPicturesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eclo_Desktop.Components.Products"
             mc:Ignorable="d" 
             Width="35"
             Height="50"
             Margin="2 0">
    <Grid>
        <Border CornerRadius="5"
                MouseDown="Border_MouseDown"
                Cursor="Hand">
            <Border.Background>
                <ImageBrush  x:Name="brLittlePictureBorder"
                             
                    ImageSource="/assets/staticimages/menscategory.png"/>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
