<UserControl x:Class="Eclo_Desktop.Components.Products.PictureProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eclo_Desktop.Components.Products"
             mc:Ignorable="d" 
             Height="75" Width="60"
             Margin="1 0">
    <Grid >
        <Border Background="{DynamicResource ThirdBackgroundColor}"
                CornerRadius="5">
        <Border CornerRadius="5"
                MouseDown="Border_MouseDown">
            <Border.Background>
                <ImageBrush x:Name="brPictures"
                    ImageSource="/assets/staticimages/MensCategory.png"/>
            </Border.Background>
        </Border>
        </Border>
    </Grid>
</UserControl>
