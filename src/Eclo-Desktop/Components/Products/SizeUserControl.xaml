<UserControl x:Class="Eclo_Desktop.Components.Products.SizeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eclo_Desktop.Components.Products"
             mc:Ignorable="d" 
             Width="60" Height="45"
             Margin="5 10">
    <Grid >
        <Button Background="{DynamicResource PrimaryBackgroundColor}"                
                BorderBrush="{DynamicResource TextTertiaryColor}"
                Style="{DynamicResource SizeButton}"
                Width="60"
                Height="40"
                x:Name="SizeButton"
                Click="SizeButton_Click"
                BorderThickness="0.5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Content="X"
                       x:Name="lblSizeSpace"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    
                </Label>
            </Grid>
            
        </Button> 
    </Grid>
</UserControl>
