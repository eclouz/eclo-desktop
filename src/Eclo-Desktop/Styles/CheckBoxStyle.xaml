<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Sorter checkbox-->
    <Style x:Key="SwitchButton" TargetType="{x:Type CheckBox}">
        <Setter Property="Height" Value="45"/>
        <Setter Property="Width" Value="160"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Border x:Name="MainBorder" Height="30"
                            CornerRadius="15"
                            BorderBrush="{DynamicResource TextTertiaryColor}"
                            BorderThickness="0.5"
                                Width="160">
                    <StackPanel Orientation="Horizontal" >
                        <Path x:Name="icon"
                              Data="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type CheckBox}}}"
                              Height="15"
                              Width="15"
                              Margin="15 0 10 0"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Fill="{DynamicResource FourthIconColor}"
                              Stretch="Uniform"
                              />
                        <Label FontSize="16"
                               Padding="0"
                               HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                               
                               Foreground="{DynamicResource FourthIconColor}"
                               Content="{TemplateBinding Content}"
                               />
