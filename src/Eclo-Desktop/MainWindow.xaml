                        <Button Height="50" Width="50"                                
                            Margin="2 2 15 2" Style="{DynamicResource MainThreeStaticButoons}"                                                        
                                >
                        </Button>


                        <Border Background="{DynamicResource ThirdBackgroundColor}"
                                CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0"
                                   Margin="10 15 10 0"
                                           FontSize="16"
                                       Content="MuHammadAliyev "
                                       
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource FourthIconColor}"
                                       
                                       Padding="0"></Label>
                                    <Label Grid.Row="1"
                                           
                                   Foreground="{DynamicResource FourthIconColor}"
                                       Content="Uzbekistan"
                                   Margin="10 0"
                                       
                                       Padding="0"
                                       
                                       />
                                </Grid>
                                <Border     CornerRadius="5"
                                    Width="50"                                    
                                    Height="50"   
                                            Margin="10 0"
                                    HorizontalAlignment="Right"     
                                    >
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Assets/StaticImages/IMG_991e036e-f2ae-4547-9b10-a99520e2ecc8.jpg"/>
                                    </Border.Background>
                                </Border>
                            </StackPanel>
                        </Border>




                    </StackPanel>

                    <Frame Grid.Row="2"
                       Name="PageNavigator"
                       Margin="20 15"
                       NavigationUIVisibility="Hidden">
                        
                    </Frame>

                </Grid>

            </Grid>

        </Border>
